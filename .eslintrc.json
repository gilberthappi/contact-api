{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    // Disable specific ESLint rules here
    "consistent-return": "off",
    "no-console": "off",
    "import/prefer-default-export": "off",
    "radix": "off",
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
/* eslint-disable import/extensions */
